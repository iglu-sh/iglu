{
  "name": "iglu-controller",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "SKIP_ENV_VALIDATION=true bun --bun next build",
    "check": "bun --bun run next lint && tsc --noEmit",
    "dev": "bun --bun next dev --turbo -H 0.0.0.0",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "start": "bun --bun run next start",
    "typecheck": "tsc --noEmit",
    "__no_postinstall": "bunx bun2nix -o ../../nix/pkgs/controller/bun.nix && deadnix -e ../../nix/pkgs/controller/bun.nix && nixpkgs-fmt ../../nix/pkgs/controller/bun.nix"
  },
